{
  "app-id": "gg.slippi.Ishiiruka",
  "branch": "stable",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.38",
  "sdk": "org.gnome.Sdk",
  "command": "dolphin-emu",
  "rename-desktop-file": "dolphin-emu.desktop",
  "rename-icon": "slippi",
  "rename-appdata-file": "slippi.appdata.xml",
  "finish-args": [
    "--device=all",
    "--filesystem=host:ro",
    "--socket=pulseaudio",
    "--socket=x11",
    "--share=network",
    "--share=ipc"
  ],
  "modules": [
    {
      "name": "wxWidgets",
      "rm-configure": true,
      "cleanup": [
         "/bin",
         "/include",
         "/share/bakefile",
         "/share/aclocal"
      ],
      "config-opts": [
        "--with-libpng",
        "--with-zlib",
        "--disable-sdltest",
        "--disable-ribbon",
        "--disable-html",
        "--disable-propgrid",
        "--disable-richtext",
        "--with-expat=builtin",
        "--with-libiconv=/usr"
      ],
      "sources": [
        {
         "type": "archive",
         "url": "https://github.com/wxWidgets/wxWidgets/releases/download/v3.1.4/wxWidgets-3.1.4.tar.bz2",
         "sha256":"3ca3a19a14b407d0cdda507a7930c2e84ae1c8e74f946e0144d2fa7d881f1a94"
        }
      ]
    },
    {
      "name": "libusb",
      "config-opts": [
        "--disable-static"
      ],
      "cleanup": [
        "/include",
        "/lib/*.la",
        "/lib/pkgconfig"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/libusb/libusb/releases/download/v1.0.23/libusb-1.0.23.tar.bz2",
          "sha256": "db11c06e958a82dac52cf3c65cb4dd2c3f339c8a988665110e0d24d19312ad8d"
        }
      ]
    },
    {
      "name": "dolphin-emu",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DENABLE_ALSA=OFF",
        "-DENABLE_SDL=ON",
        "-DENABLE_EVDEV=OFF",
        "-DENABLE_WX=OFF",
        "-DDISTRIBUTOR=Flathub"
      ],
      "build-options": {
        "arch": {
          "arm": {
            "config-opts": [
              "-DENABLE_GENERIC=ON"
            ]
          }
        }
      },
      "cleanup": [
        "/share/man"
      ],
      "post-install": [
        "install -Dm644 appdata.xml /app/share/appdata/slippi.appdata.xml",
        "mkdir -p /app/share/icons/hicolor/512x512/apps",
        "cp slippi.png /app/share/icons/hicolor/512x512/apps",
        "desktop-file-edit --set-key=Name --set-value='Project Slippi' /app/share/applications/dolphin-emu.desktop"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/project-slippi/Ishiiruka/archive/v2.2.5.tar.gz",
          "sha256": "96f6fe7c1935a3ba025b246a47de75bce56e6172a7b6e3d2e47eec418cad10d3"
        },
        {
          "type": "file",
          "path": "appdata.xml"
        },
        {
          "type": "file",
          "path": "slippi.png"
        }
      ]
    }
  ]
}
