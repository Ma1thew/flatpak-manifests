{
    "app-id": "org.multimc.MultiMC5",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "multimc",
    "separate-locales": false,
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk8"
    ],
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio",
        "--share=network",
        "--env=JAVA_HOME=/app/jre"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/openjdk11/bin"
    },
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/lib/sdk/openjdk8/install.sh"
            ]
        },
        {
            "name": "multimc5",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DMultiMC_LAYOUT=lin-system"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/MultiMC/MultiMC5",
                    "branch": "develop"
                } 
            ],
            "post-install": [
                "install -D -m 644 ./application/resources/multimc/scalable/multimc.svg /app/share/icons/hicolor/scalable/apps/org.multimc.MultiMC5.svg",
                "install -D -m 644 ./application/package/linux/multimc.desktop /app/share/applications/org.multimc.MultiMC5.desktop",
                "desktop-file-edit --set-key=Icon --set-value='org.multimc.MultiMC5' /app/share/applications/org.multimc.MultiMC5.desktop"
            ]
        } 
    ]
}
